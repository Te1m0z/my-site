{
  "compilerOptions": {
    "lib": ["ES2015", "ES2016", "ES2018"],
    "target": "ES6",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    ".eslintrc.json"
  ],
  "exclude": [
    ".git",
    ".idea",
    ".vscode",
    "build",
    "dist",
    "docs",
    "node_modules"
  ]
}
